{
  "manifest_version": 2,
  
  "name": "Fullscreen WhatsApp Web",
  "short_name": "WhatsApp Web",
  "version": "1.0.0",
  "description": "Use WhatsApp Web in fullscreen. Expand the area of chat in WhatsApp Web.",
  
  "author": "Shuja Ahmed",
  "content_scripts": 
  [
	  {
		"css": ["assets/styles.css"],
		"matches": ["https://web.whatsapp.com/"]
	  }
  ],
  "icons": 
  {
    "16": "assets/images/16.png",
    "32": "assets/images/32.png",
    "48": "assets/images/48.png",
    "128": "assets/images/128.png"
  }
}